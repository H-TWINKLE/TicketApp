<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_train_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:textSize="25sp"
        android:text="车次" />

    <TextView
        android:id="@+id/tv_train_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_train_time"
        android:layout_below="@+id/tv_train_time"
        android:layout_marginStart="34dp"
        android:layout_marginTop="17dp"
        android:textSize="20sp"
        android:text="初始地" />

    <TextView
        android:id="@+id/tv_train_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_train_from"
        android:layout_alignBottom="@+id/tv_train_from"
        android:layout_marginStart="65dp"
        android:layout_toEndOf="@+id/tv_train_from"
        android:textSize="20sp"
        android:text="目的地" />

    <TextView
        android:id="@+id/tv_train_ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_train_to"
        android:layout_alignBottom="@+id/tv_train_to"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:text="余票" />
</RelativeLayout>
